<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_curriculum_tree" model="ir.ui.view">
			<field name="name">view.curriculum.tree</field>
			<field name="model">curriculum</field>
			<field name="arch" type="xml">
				<tree string="Hoja de Vida">
					<field name="partner_id"/>
					<field name="civil_status_id"/>
					<field name="gender_id"/>
					<field name="residence_city_id"/>
					<field name="identification_type_id"/>
					<field name="identification_number"/>
					<field name="home_phone"/>
					<field name="mobile_phone"/>
				</tree>
			</field>
		</record>	

		<record id="view_curriculum_form" model="ir.ui.view">
			<field name="name">view.curriculum.form</field>
			<field name="model">curriculum</field>
			<field name="arch" type="xml">
				<form string="Hoja de Vida">
					<notebook colspan="4">
						<page string="Datos Generales">
							<group col="6" string="Información Personal">
								<field colspan="4" name="picture" widget="image" width="64" height="64"/>
								<separator colspan="6"/>
								<field name="partner_id"/>
								<field name="identification_type_id"/>
								<field name="identification_number"/>
								<field name="civil_status_id"/>
								<field name="gender_id"/>
								<field name="blood_type_id"/>
								<field name="ethnic_group_id"/>
								<field name="country_id"/>
								<field name="nationality_id"/>
								<field name="birth_city_id"/>
								<field name="residence_city_id"/>
								<field name="disability" on_change="on_disability(disability)"/>
								<field name="disability_id" attrs="{'invisible':[('disability', '!=', True)], 'required':[('disability', '==', True)]}"/>
								<field name="disability_degree" attrs="{'invisible':[('disability', '!=', True)], 'required':[('disability', '==', True)]}"/>
								<field name="conadis_number" attrs="{'invisible':[('disability', '!=', True)]}"/>
							</group>
							<separator colspan="4"/>
							<group col="6" string="Información de Residencia">
								<field name="home_phone"/>
								<field name="mobile_phone"/>
								<field name="street_address_1"/>
								<field name="street_address_2"/>
								<field name="house_number"/>
								<field name="location_reference"/>
							</group>
						</page>
						<page string="Información Bancaria">
							<field name="bank_info_ids" nolabel="1">
								<tree string="Información Bancaria" editable="bottom">
									  <field name="id_entity_finance"/>
									  <field name="id_bank_account"/>
									  <field name="number"/>
								</tree>	
							</field>
						</page>
						<page string="Carga Familiar">
							<field name="family_burden_ids" nolabel="1">
								<tree string="Carga Familiar" editable="bottom">
									<field name="name"/>
									<field name="last_name"/>
									<field name="type_id"/>
									<field name="number_id"/>
									<field name="type_rel_family"/>
									<field name="date_birth"/>
									<field name="phone"/>
									<field name="movil"/>
									<field name="type_instruction"/>
									<field name="check_contact_sos"/>
								</tree>	
							</field>
						</page>
						<page string="Formación Académica">
								<field name="instruction_info_ids" nolabel="1">
									<tree string="Formación Académica" editable="bottom">
										<field name="instruction_id"/>
										<field name="name_institution"/>
										<field name="specialization"/>
										<field name="title"/>
										<field name="register"/>
									</tree>
								</field>
							</page>
							<page string="Experiencia Laboral">
								<field name="experience_info_ids" nolabel="1">
									<tree string="Experiencia Laboral" editable="bottom">
										<field name="init_date" on_change="on_date(init_date,end_date)"/>
										<field name="end_date" on_change="on_date(init_date,end_date)" />
										<field name="company"/>
										<field name="position"/>
										<field name="functions"/>
									</tree>
								</field>
							</page>
						<page string="Idiomas">
							<field name="language_studies_ids" nolabel="1">
								<tree string="Idiomas" editable="bottom">
									<field name="name"/>
									<field name="percentage_listening"/>
									<field name="percentage_spoken"/>
									<field name="percentage_read"/>
									<field name="percentage_written"/>
									<field name="certificate_proficiency"/>
									<field name="institution_language"/>
								</tree>	
							</field>
						</page>
						<page string="Capacitaciones">
						  <field name="info_training_ids" nolabel="1">
						    <tree string="Capacitaciones" editable="bottom">
						      <field name="name"/>
						      <field name="date_star"/>
						      <field name="date_end"/>
						      <field name="event_id"/>
						      <field name="sponsor"/>
						      <field name="duration"/>
						      <field name="title_cert"/>
						      <field name="certified_for"/>
						      <field name="certified_type_id"/>
						      <field name="country_id"/>			      
						    </tree>	
						  </field>
						</page>
					</notebook>
				</form>
			</field>
		</record>
	</data>
</openerp>
